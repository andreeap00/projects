<% for(var i=0;i<pieces.length; i++){ %>

<tr>
    <td><%= i + 1 %></td>
    <td><%= pieces[i].pieceType %></td>
    <td><%= pieces[i].pieceNumber %></td>
    <td><%= pieces[i].descript %></td>
    <td>

        <a href="/update-piece?id=<%= pieces[i]._id%>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fa-regular fa-pen-to-square"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id=<%= pieces[i]._id%>>
            <span class="text-gradient"><i class="fa-regular fa-trash-can"></i></span>
        </a>
    </td>
</tr>


<% } %>